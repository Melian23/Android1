<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/lobster"
        android:gravity="center_horizontal"
        android:includeFontPadding="true"
        android:text="@string/logo"
        android:textColor="@color/green"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="100sp"
        android:backgroundTint="@color/purple_200"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/hint_field"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/lightGrey" />

    <Button
        android:id="@+id/main_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/field"
        android:layout_marginHorizontal="130sp"
        android:layout_marginTop="20sp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/pacifico"
        android:text="@string/main_btn" />

    <TextView
        android:id="@+id/result_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_btn"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/alegreya_sans_medium"
        android:gravity="center_horizontal"
        android:includeFontPadding="true"
        android:textColor="@color/darkGrey"
        android:textSize="25sp" />

    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/result_info"
        android:layout_marginStart="20sp"
        android:layout_marginTop="40sp"
        android:backgroundTint="@color/darkGrey"
        android:gravity="center_horizontal"
        android:text="@string/check_box"
        android:textColor="@color/white"
        android:textSize="17dp" />

    <Switch
        android:id="@+id/no_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/result_info"
        android:layout_marginStart="200sp"
        android:layout_marginTop="40sp" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_box"
        android:layout_marginHorizontal="150sp"
        android:layout_marginTop="20sp"
        android:backgroundTint="@color/darkGrey"
        android:gravity="center" />

</RelativeLayout>